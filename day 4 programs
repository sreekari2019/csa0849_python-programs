## sorting in ascending or descending order of list based on users choice
def sorting(lst,order):
    if order=='A':
        s=sorted(lst) 
        for i in s:
            print(i) 
    else:
        s=list(reversed(sorted(lst))) 
        for i in s:
            print(i) 
n=int(input("enter range: ")) 
order=input("enter order A/D") 
lst=[] 
for i in range(n):
    a=input() 
    lst.append(a) 
sorting(lst,order) 

## counting vowels in string 
s=input("enter string: ") 
v='aeiouAEIOU'
vc=0
for i in s:
    if i in v:
        vc=vc+1 
print(vc) 

## printing square and cube of decimal num 
def square(n):
    return n*n 
def cube(n):
    return n*n*n 
n=float(input())  
print(square(n)) 
print(cube(n)) 

## program to count no of student users 
t_users=int(input("enter total users: ")) 
staff_users=int(input("enter staff users: "))
nt=staff_users//3 
staff_users=staff_users+nt
student_users=t_users-staff_users 
print("student_users are:",student_users) 

## reverse of string using loop 
s=input("enter a string: ") 
s1=" " 
for i in s:
    s1=i+s1
print(s1) 

## pattern 
r=int(input("enter rows: ")) 
if r<=0:
    print("enter positive integer")
for i in range(1,r+1):
    for j in range(1,i+1):
        print(j/10,end=' ') 
    print('\r')  
    
