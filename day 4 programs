## 1.sorting in ascending or descending order of list based on users choice
def sorting(lst,order):
    if order=='A':
        s=sorted(lst) 
        for i in s:
            print(i) 
    else:
        s=list(reversed(sorted(lst))) 
        for i in s:
            print(i) 
n=int(input("enter range: ")) 
order=input("enter order A/D") 
lst=[] 
for i in range(n):
    a=input() 
    lst.append(a) 
sorting(lst,order) 

##2.counting vowels in string 
s=input("enter string: ") 
v='aeiouAEIOU'
vc=0
for i in s:
    if i in v:
        vc=vc+1 
print(vc) 

## 3. printing square and cube of decimal num 
def square(n):
    return n*n 
def cube(n):
    return n*n*n 
n=float(input())  
print(square(n)) 
print(cube(n)) 

## 4. program to count no of student users 
t_users=int(input("enter total users: ")) 
staff_users=int(input("enter staff users: "))
nt=staff_users//3 
staff_users=staff_users+nt
student_users=t_users-staff_users 
print("student_users are:",student_users) 

## 5. reverse of string using loop 
s=input("enter a string: ") 
s1=" " 
for i in s:
    s1=i+s1
print(s1) 

## 6. pattern 
r=int(input("enter rows: ")) 
if r<=0:
    print("enter positive integer")
for i in range(1,r+1):
    for j in range(1,i+1):
        print(j/10,end=' ') 
    print('\r')  
    
 ## 8. mean median and mode 
import numpy
c=[2,3,4,5,6,6] 
x=numpy.mean(c)
print(x) 
y=numpy.median(c)
print(y) 
from scipy import stats
z=stats.mode(c)
print(z) 

## 9. printing vowels and consonants separately in given string 
s=input("enter string: ") 
print("vowels ") 
for i in s:
    if i in "aeiouAEIOU":
        print(i,end=",") 
print("\nconsonants ")
for i in s:
    if i not in "aeiouAEIOU":
        print(i,end=",") 
        
## 7. printing numbers less than that number in the list
s=int(input("enter size: ")) 
i=0 
testlist,resultlist=[],[] 
for n in range(s):
    e=int(input()) 
    testlist.append(e) 
while i<len(testlist):
    k=testlist[i] 
    count=0 
    for j in testlist:
        if k>j:
            count=count+1 
    resultlist.append(count) 
    i=i+1 
print(resultlist) 

## 10. reversing an integer using loop   
number = int(input("Enter the integer number: "))    
revs_number = 0    
while (number > 0):    
    remainder = number % 10  
    revs_number = (revs_number * 10) + remainder  
    number = number // 10    
print("The reverse number is : {}".format(revs_number)) 
