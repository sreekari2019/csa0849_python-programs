def print_pattern(n):
    for i in range(1, n+1):
        for j in range(1, n-i+1):
            print(" ", end = "")
        for j in range(i, 0, -1):
            print(j, end = ' ')
        print()
n = int(input("Enter the number of rows: ")) 
if n<=0:
    print("pls enter a positive integer")
print_pattern(n)
